pipeline {
    agent any

    environment {
        IMAGE_NAME = "my-webpage"
        CONTAINER_NAME = "exciting_roentgen"
        PORT = "9094"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/RadwaSamirr/radwasamir.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "üî® Building image: $IMAGE_NAME"
                    sh "docker build -t $IMAGE_NAME ."
                }
            }
        }

        stage('Stop and Remove Existing Container') {
            steps {
                script {
                    echo "üõë Stopping and removing container: $CONTAINER_NAME"
                    sh """
                        if [ \$(docker ps -q -f name=$CONTAINER_NAME) ]; then
                            docker stop $CONTAINER_NAME
                        fi
                        if [ \$(docker ps -aq -f name=$CONTAINER_NAME) ]; then
                            docker rm $CONTAINER_NAME
                        fi
                    """
                }
            }
        }

        stage('Run New Container') {
            steps {
                script {
                    echo "üöÄ Running new container on port $PORT"
                    sh "docker run -d -p $PORT:80 --name $CONTAINER_NAME $IMAGE_NAME"
                }
            }
        }
    }

    post {
        failure {
            echo '‚ùå Deployment failed.'
        }
        success {
            echo "‚úÖ Static website is now running at http://localhost:$PORT"
        }
    }
}
