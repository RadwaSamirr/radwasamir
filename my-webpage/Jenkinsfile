pipeline {
    agent any

    environment {
        IMAGE_NAME = 'flaskapp'
        TAG = 'latest'
    }

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/YourUsername/YourRepo.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t $IMAGE_NAME:$TAG .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Stop and remove any old container if it exists
                    sh '''
                    docker rm -f flask_container || true
                    docker run -d -p 5000:5000 --name flask_container $IMAGE_NAME:$TAG
                    '''
                }
            }
        }
    }

    post {
        success {
            echo '✅ App built and running!'
        }
        failure {
            echo '❌ Something went wrong.'
        }
    }
}
