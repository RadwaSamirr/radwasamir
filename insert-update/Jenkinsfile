pipeline {
    agent any

    environment {
        IMAGE_TAG = "v${env.BUILD_NUMBER}"
        PROJECT_NAME = "radwasamir"
        APP_PORT = "2222"
        SLACK_EMAIL = "samirradwa188@gmail.com"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    extensions: [
                        [
                            $class: 'RelativeTargetDirectory',
                            relativeTargetDir: 'insert-update'
                        ]
                    ],
                    userRemoteConfigs: [[url: 'https://github.com/RadwaSamirr/radwasamir.git']]
                ])
                script {
                    def commit = sh(returnStdout: true, script: 'git -C insert-update rev-parse --short HEAD').trim()
                    env.COMMIT_HASH = commit
                }
            }
        }

        stage('Verify Files') {
            steps {
                script {
                    dir('insert-update') {
                        if (!fileExists('Dockerfile')) {
                            error("ERROR: Dockerfile not found in insert-update directory")
                        }
                        if (!fileExists('docker-compose.yml')) {
                            error("ERROR: docker-compose.yml not found in insert-update directory")
                        }
                        sh 'ls -la'  // Debug: List files for verification
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dir('insert-update') {
                        docker.build("${PROJECT_NAME}:${IMAGE_TAG}")
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    dir('insert-update') {
                        sh "docker-compose down || true"
                        sh "IMAGE_TAG=${IMAGE_TAG} APP_PORT=${APP_PORT} docker-compose up -d"
                    }
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                script {
                    sleep(time: 10, unit: 'SECONDS')
                    sh "curl -I http://localhost:${APP_PORT} || true"
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            script {
                mail(
                    to: "${SLACK_EMAIL}",
                    subject: "SUCCESS: ${PROJECT_NAME} deployed",
                    body: """
                    Deployment successful!
                    Image: ${PROJECT_NAME}:${IMAGE_TAG}
                    Port: ${APP_PORT}
                    Commit: ${env.COMMIT_HASH}
                    Build URL: ${env.BUILD_URL}
                    """
                )
            }
        }
        failure {
            script {
                mail(
                    to: "${SLACK_EMAIL}",
                    subject: "FAILED: ${PROJECT_NAME} build",
                    body: """
                    Build failed!
                    Project: ${PROJECT_NAME}
                    Build URL: ${env.BUILD_URL}
                    """
                )
            }
        }
    }
}
