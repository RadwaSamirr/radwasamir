pipeline {
    agent any

    environment {
        IMAGE_NAME = 'rps-app'
        IMAGE_VERSION = "v${BUILD_NUMBER}"
    }

    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/RadwaSamirr/radwasamir.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'mkdir -p docker_images'
                    sh "docker build -t ${IMAGE_NAME}:${IMAGE_VERSION} ."
                    sh "docker save ${IMAGE_NAME}:${IMAGE_VERSION} -o docker_images/${IMAGE_NAME}_${IMAGE_VERSION}.tar"
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Placeholder for future tests
                    echo 'Tests would go here!'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh 'docker-compose down'
                    sh "IMAGE_VERSION=${IMAGE_VERSION} docker-compose up -d --build"
                }
            }
        }
    }

    post {
        success {
            echo "✅ Deployment succeeded with version ${IMAGE_VERSION}"
        }
        failure {
            echo "❌ Deployment failed"
        }
    }
}
