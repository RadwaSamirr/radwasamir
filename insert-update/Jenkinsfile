pipeline {
    agent any

    environment {
        IMAGE_TAG = "v${env.BUILD_NUMBER}"
        PROJECT_NAME = "radwasamir"
        APP_PORT = "2222"
        SLACK_CHANNEL = "#project" // Add this to avoid missing env var error
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Verify Files') {
            steps {
                script {
                    if (!fileExists('insert-update/Dockerfile')) {
                        error("❌ Dockerfile not found in insert-update directory")
                    }
                    if (!fileExists('insert-update/docker-compose.yml')) {
                        error("❌ docker-compose.yml not found in insert-update directory")
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image from 'insert-update' context
                    docker.build("${PROJECT_NAME}:${IMAGE_TAG}", "insert-update")
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    dir('insert-update') {
                        sh "docker-compose down || true"
                        sh """
                        IMAGE_TAG=${IMAGE_TAG} APP_PORT=${APP_PORT} \
                        docker-compose up -d --build --force-recreate
                        """
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }

        success {
            script {
                def commitHash = sh(script: 'git rev
